{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "types": [],
        "skipLibCheck": true
    },
    "include": [
        "src",
        "src/terminal"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}